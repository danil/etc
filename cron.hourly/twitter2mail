#!/bin/sh

export HOME=/home/danil

# rbenv <https://github.com/sstephenson/rbenv#basic-github-checkout>.
export RBENV_VERSION=2.2.2
export PATH="$HOME/.rbenv/shims:$HOME/.rbenv/bin:$PATH"

su danil \
   --shell=/bin/bash \
   --command "cd $HOME/bin/thtm && \
              eval '$(rbenv init -)' && \
              bundle exec 'ruby $HOME/bin/thtm/thtm.rb'"

EXITVALUE=$?
if [ $EXITVALUE != 0 ]; then
    logger -t git "ALERT mirroring exited abnormally with [$EXITVALUE]"
fi

exit 0
