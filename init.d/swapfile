# $Id$

depend()
{
	after localmount
}

start()
{
	ebegin "Activating swap file"
	swapon ${PATH_TO_SWAPFILE}
	eend $?
}

stop()
{
	ebegin "Deactivating swap file"
	swapoff ${PATH_TO_SWAPFILE}
	eend $?
}
