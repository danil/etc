Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/snap/bin"

# <danil@kutkevich.org>.
Defaults editor=/usr/bin/emacs

# Host alias specification

# User alias specification

# Cmnd alias specification

# User privilege specification
root	ALL=(ALL:ALL) ALL

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL

# Allow members of group sudo to execute any command
%sudo	ALL=(ALL:ALL) ALL

danil ALL=(ALL) NOPASSWD: /bin/chown -R danil\: .git/
danil ALL=(ALL) NOPASSWD: /bin/chown -R danil\: /home/danil/.emacs.var
danil ALL=(ALL) NOPASSWD: /bin/systemctl start docker
danil ALL=(ALL) NOPASSWD: /bin/systemctl start postgresql
danil ALL=(ALL) NOPASSWD: /bin/systemctl start redis-server
danil ALL=(ALL) NOPASSWD: /home/danil/bin/deb-packages
danil ALL=(ALL) NOPASSWD: /home/danil/bin/openconnectrecon *
danil ALL=(ALL) NOPASSWD: /sbin/reboot
danil ALL=(ALL) NOPASSWD: /sbin/shutdown -h now
danil ALL=(ALL) NOPASSWD: /usr/bin/aptitude --prompt safe-upgrade
danil ALL=(ALL) NOPASSWD: /usr/bin/aptitude update
danil ALL=(ALL) NOPASSWD: /usr/bin/git status
danil ALL=(ALL) NOPASSWD: /usr/bin/light -A 1
danil ALL=(ALL) NOPASSWD: /usr/bin/light -U 1
danil ALL=(ALL) NOPASSWD: /usr/bin/updatedb

